<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
</head>

<body style="background: #f6f6f6">
    <section  class="vh-100">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6 text-black">

                    <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
                        <span style="font-family: 'Poppins', sans-serif;" class="display-2 fw-bold mb-0">awareness fund</span>
                    </div>
                    
                    <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
                        <!-- form que mandara la informacion al server -->
                        <form action="/login" method="POST" style="width: 23rem;">

                            <h3 style="font-family: 'Poppins', sans-serif;" class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Log In</h3>

                            <div class="form-outline mb-4">
                                <input type="text" name="username" id="form2Example18" class="form-control form-control-lg" />
                                <label style="font-family: 'Poppins', sans-serif;" class="form-label" for="form2Example18">Email address</label>
                            </div>

                            <div class="form-outline mb-4">
                                <input type="password" name="password" id="form2Example28" class="form-control form-control-lg" />
                                <label style="font-family: 'Poppins', sans-serif;" class="form-label" for="form2Example28">Password</label>
                            </div>

                            <div class="pt-1 mb-4">
                                <input style="font-family: 'Poppins', sans-serif;" type="submit" value="Log In" class="btn btn-lg btn-success"/>
                            </div>

                            <p class="small mb-5 pb-lg-2"><a class="text-muted" href="recover">Forgot password?</a></p>
                            <p>Don't have an account? <a href="register" class="link-info">Register here</a></p>

                        </form>

                    </div>

                </div>
                <div class="col-sm-6 px-0 d-none d-sm-block">
                    <img src="https://charitylawyerblog.com/wp-content/uploads/2017/12/iStock-1188864563.jpg"
                        alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
                </div>
            </div>
        </div>
    </section>
</body>

</html>